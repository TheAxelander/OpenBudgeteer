@page "/"

<style>
    .card-tile {
        margin: 15px;
        max-width: 450px;
    }
    .card-img-col-padding {
        padding: 20px 35px;
    }
</style>

<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </symbol>
</svg>

<div class="d-flex flex-wrap justify-content-center">
    <div class="card card-home m-2">
        <div class="row g-0">
            <div class="col-4 card-img-col-padding">
                <img src="css/icons8/code-fork.png" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-8">
                <div class="card-body">
                    <a href="https://github.com/TheAxelander/OpenBudgeteer" target="_blank"><h5 class="card-title">OpenBudgeteer Repository</h5></a>
                    <p class="card-text">Access source code hosted on Github</p>
                </div>
            </div>
        </div>
    </div>
    <div class="card card-home m-2">
        <div class="row g-0">
            <div class="col-4 card-img-col-padding">
                <img src="css/icons8/answers.png" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-8">
                <div class="card-body">
                    <a href="https://github.com/TheAxelander/OpenBudgeteer/issues/new" target="_blank"><h5 class="card-title">Create Issue</h5></a>
                    <p class="card-text">Found a bug or missing a feature? Create an issue on Github</p>
                </div>
            </div>
        </div>
    </div>
    <div class="card card-home m-2">
        <div class="row g-0">
            <div class="col-4 card-img-col-padding">
                <img src="css/icons8/announce.png" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-8">
                <div class="card-body">
                    <a href="https://github.com/TheAxelander/OpenBudgeteer/discussions/categories/announcements" target="_blank"><h5 class="card-title">Display Announcements</h5></a>
                    <p class="card-text">See latest updates and announcements.</p>
                </div>
            </div>
        </div>
    </div>
</div>
